                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Padding="0,13,0,0"
                                        TextColor="Black"
                                        FontSize="16"
                                        Grid.Column="0"
                                        Text="{Binding Day}"/>
                                    <Label
                                        Padding="0,5,0,0"
                                        TextColor="Black"
                                        FontSize="16"
                                        Grid.Column="1"
                                        Text="{Binding Food}"/>
                                    <Label
                                        Padding="0,13,0,0"
                                        TextColor="Black"
                                        FontSize="16"
                                        Grid.Column="2"
                                        Text="{Binding Drink}"/>
                                    <Label
                                        Padding="0,9,0,0"
                                        TextColor="Black"
                                        FontSize="16"
                                        Grid.Column="3"
